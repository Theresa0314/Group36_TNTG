<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.ChatFragment"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="103dp"
                android:layout_height="104dp"
                android:layout_below="@id/profile_text"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_fragment"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@color/black" />

                <ImageView
                    android:id="@+id/btn_profile_image_change"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:background="@drawable/camera_bg"
                    android:clickable="true"
                    android:contentDescription="..."
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:padding="6dp"
                    android:src="@drawable/camera_icon" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:text="Name"
                android:textColor="#AFACAC"
                android:textSize="12sp">

            </TextView>

            <TextView
                android:id="@+id/tv_profile_fragment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_heading"
                android:layout_marginStart="15dp"
                android:clickable="false"
                android:focusable="false"
                android:padding="2dp"
                android:gravity="top"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:importantForAutofill="no" />

            <ImageView
                android:id="@+id/btn_save_edit_username"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_name_heading"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/edit_icon" />

            <TextView
                android:id="@+id/tv_bio_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_profile_fragment_username"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="3dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="2dp"
                android:textColor="#AFACAC"
                android:text="Bio..."
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_profile_fragment_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bio_heading"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bio_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="top"
                android:layout_marginEnd="10dp"
                android:maxLength="100"
                android:maxLines="6"
                android:minLines="6"
                android:padding="20dp"
                android:text="What's on your mind..."

                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_view"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:padding="50dp"
            android:src="@drawable/panda" />
    </RelativeLayout>


</RelativeLayout>